<div class="add-category">
	<h3>Add New Category</h3>

	<%= form_for(@category) do |f| %>
		<p>
			<%=  f.label "Type : " %>
			<%=  f.text_field :kind %>
		</p>

		<p>
			<%=  f.label "Choose a parent category : " %>
			<%=  f.collection_select :parent_category_id, Category.all, :id, :kind, :include_blank => true %>
		</p>

		<%= f.submit %>
	<% end %>
</div>